<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.percent.PercentRelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:id="@+id/spacer1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="5%" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/list_settings_picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/spacer1"
            android:layout_toRightOf="@id/spacer1"
            android:src="@drawable/stock_img"
            app:layout_widthPercent="10%" />

        <View
            android:id="@+id/spacer2"
            android:layout_toEndOf="@id/list_settings_picture"
            android:layout_toRightOf="@id/list_settings_picture"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="5%" />

        <TextView
            android:id="@+id/list_settings_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/spacer2"
            android:layout_toRightOf="@id/spacer2"
            android:text="Settings"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_widthPercent="15%" />

        <View
            android:id="@+id/spacer3"
            android:layout_toEndOf="@id/list_settings_description"
            android:layout_toRightOf="@id/list_settings_description"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="55%" />

        <ImageView
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/spacer3"
            android:layout_toRightOf="@id/spacer3"
            android:src="@drawable/list_settings_arrow"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="10%" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="1dp">

        <View
            android:background="@color/match_sep"
            app:layout_heightPercent="100%"
            app:layout_marginStartPercent="20%"
            app:layout_widthPercent="80%" />
    </android.support.percent.PercentRelativeLayout>
</LinearLayout>